layout {
  default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
  }
  tab name="main" {
    pane split_direction="vertical" {
        pane split_direction="horizontal" size="30%" {
            pane cwd="~"
            pane cwd="~"
        }
        pane size="70%" focus=true cwd="~"
    }
  }
}
